@* the page for editing an address book *@

@page

@model EditModel

@{
    Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
    ViewData["Title"] = "Edit Address Book";
    ViewData["UserCentreFunction"] = "Edit";
    ViewData["StorePage"] = HeaderNavigation.UserCentre;
    ViewData["UserCentrePage"] = UserCentreMenu.AddressBooks;
}

@section AdditionalBreadcrumbItems {
    <li class="breadcrumb-item">
        <a asp-area="Identity" asp-page="/Account/Manage/AddressBooks/Index" class="text-success text-decoration-none">Address books</a>
    </li>
}

<partial name="_StatusMessage" for="StatusMessage" />
<form asp-area="Identity" asp-page="/Account/Manage/AddressBooks/Edit" method="post">
    <p class="text-justify">※ All fields are required, and you have to ensure the reliability of information for successful delivery.</p>
    <input type="hidden" asp-for="AddressBook.ID" readonly />
    <div class="form-group">
        <!-- the length here should be equal to the relevant attribute in the specified model -->
        <ejs-tooltip id="tooltip-book-name" content="At max 25 characters long." position="TopLeft">
            <e-content-template>
                <div class="e-float-input e-success">
                    <input asp-for="AddressBook.BookName" autofocus required />
                    <span class="e-float-line"></span>
                    <label asp-for="AddressBook.BookName" class="e-float-text"></label>
                </div>
                <div class="text-justify">
                    <span asp-validation-for="AddressBook.BookName" class="text-danger font-weight-bold" style="font-size: 13px"></span>
                </div>
            </e-content-template>
        </ejs-tooltip>
    </div>
    <input asp-for="AddressBook.UserId" type="hidden" value="@Model.UserId" readonly />
    <div class="form-group row">
        <div class="col">
            <!-- the minimum and maximum length here should be equal to the relevant attributes in the specified model -->
            <ejs-tooltip id="tooltip-first-name" content="At least 2 and at max 25 letters long,<br />with only the 1st letter uppercase." position="TopLeft">
                <e-content-template>
                    <div class="e-float-input e-success">
                        <input asp-for="AddressBook.FirstName" required />
                        <span class="e-float-line"></span>
                        <label asp-for="AddressBook.FirstName" class="e-float-text"></label>
                    </div>
                    <div class="text-justify">
                        <span asp-validation-for="AddressBook.FirstName" class="text-danger font-weight-bold" style="font-size: 13px"></span>
                    </div>
                </e-content-template>
            </ejs-tooltip>
        </div>
        <div class="col">
            <!-- the minimum and maximum length here should be equal to the relevant attributes in the specified model -->
            <ejs-tooltip id="tooltip-last-name" content="At least 2 and at max 25 letters long,<br />with only the 1st letter uppercase." position="TopRight">
                <e-content-template>
                    <div class="e-float-input e-success">
                        <input asp-for="AddressBook.LastName" required />
                        <span class="e-float-line"></span>
                        <label asp-for="AddressBook.LastName" class="e-float-text"></label>
                    </div>
                    <div class="text-justify">
                        <span asp-validation-for="AddressBook.LastName" class="text-danger font-weight-bold" style="font-size: 13px"></span>
                    </div>
                </e-content-template>
            </ejs-tooltip>
        </div>
    </div>
    <div class="form-group">
        <!-- the length here should be equal to the relevant attribute in the specified model -->
        <ejs-tooltip id="tooltip-detailed-address" content="At max 300 characters long." position="TopLeft">
            <e-content-template>
                <div class="e-float-input e-success">
                    <input asp-for="AddressBook.DetailedAddress" required />
                    <span class="e-float-line"></span>
                    <label asp-for="AddressBook.DetailedAddress" class="e-float-text"></label>
                </div>
                <div class="text-justify">
                    <span asp-validation-for="AddressBook.DetailedAddress" class="text-danger font-weight-bold" style="font-size: 13px"></span>
                </div>
            </e-content-template>
        </ejs-tooltip>
    </div>
    <div class="form-group">
        <div class="e-float-input e-success">
            <input asp-for="AddressBook.ZipOrPostalCode" required />
            <span class="e-float-line"></span>
            <label asp-for="AddressBook.ZipOrPostalCode" class="e-float-text"></label>
        </div>
        <div class="e-control text-justify">
            <span asp-validation-for="AddressBook.ZipOrPostalCode" class="text-danger font-weight-bold" style="font-size: 13px"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="e-float-input e-success">
            <input asp-for="AddressBook.PhoneNumber" required />
            <span class="e-float-line"></span>
            <label asp-for="AddressBook.PhoneNumber" class="e-float-text"></label>
        </div>
        <div class="e-control text-justify">
            <span asp-validation-for="AddressBook.PhoneNumber" class="text-danger font-weight-bold" style="font-size: 13px"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success btn-block" @(!Model.IsEmailConfirmed ? "disabled" : string.Empty)>Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScripts" />
}